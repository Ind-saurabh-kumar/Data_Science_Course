   ],
   "source": [
    "import pandas as pd \n",
    "\n",
    "# sample data \n",
    "data={'Color': ['Red', 'Green', 'Blue', 'Red']}\n",
    "\n",
    "df = pd.DataFrame(data)\n",
    "\n",
    "print(df)\n",
    "\n",
    "# One-hot Encoding\n",
    "\n",
    "encoded_data = pd.get_dummies(df, columns=['Color'])\n",
    "print(encoded_data)"
   ]
